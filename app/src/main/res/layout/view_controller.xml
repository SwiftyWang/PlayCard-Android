<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/touxiangbg"
        android:padding="@dimen/small_padding"
        android:src="@drawable/dizhu"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large_padding"
        android:orientation="horizontal"
        android:paddingTop="@dimen/middle_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/naozhong"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@drawable/button_bg"
            android:padding="@dimen/small_padding"
            android:src="@drawable/buchu1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@drawable/button_bg"
            android:padding="@dimen/small_padding"
            android:src="@drawable/chongxuan1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@drawable/button_bg"
            android:padding="@dimen/small_padding"
            android:src="@drawable/tishi1"/>

        <ImageView
            android:id="@+id/out_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@drawable/button_bg"
            android:padding="@dimen/small_padding"
            android:src="@drawable/chupai1"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>